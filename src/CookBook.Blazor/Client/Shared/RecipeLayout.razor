@inherits LayoutComponentBase
 
<RadzenDialog/>
<RadzenNotification/>
<RadzenTooltip/>
<RadzenContextMenu/>
<RadzenLayout>
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0" Class="rz-px-4" Style="height: 100%;">
            <RadzenColumn Size="6">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" Gap="1rem">
                    <RadzenText Text="CookBook" TextStyle="TextStyle.Subtitle1" Class="rz-mb-0" Style="color: var(--rz-header-color);"/>
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn Size="6">
                <RadzenMenu Responsive="true" Style="float: right;">
                    <RadzenMenuItem Text="Publish" Path="Profile" Icon="account_circle"/>
                </RadzenMenu>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody>
        <RadzenRow Class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
                @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
   
</RadzenLayout>